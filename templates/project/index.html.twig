{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1>Administrateur</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Technologie principale</th>
                <th>Technologie secondaire</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.mainTech }}</td>
                <td>{{ project.secondTech }}</td>
                <td>{{ project.description }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('app_project_show', {'id': project.id}) }}" role="button">Montrer</a>
                    <a class="btn btn-success" href="{{ path('app_project_edit', {'id': project.id}) }}" role="button">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_project_new') }}" role="button" >Cr√©er un projet</a>
{% endblock %}
